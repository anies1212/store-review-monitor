{
  "name": "store-review-monitor",
  "version": "0.1.0",
  "description": "GitHub Action to monitor App Store Connect and Google Play Console review status and notify via Slack",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt"
  },
  "keywords": [
    "github-action",
    "app-store-connect",
    "google-play-console",
    "review-monitoring",
    "slack-notification",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.1.10",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@slack/webhook": "^7.0.2",
    "@slack/web-api": "^7.0.4",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
